{
  "name": "electron-sync-state",
  "version": "0.0.1",
  "scripts": {
    "build:main": "vite build -c configs/vite.main.config.ts",
    "build:renderer": "vite build -c configs/vite.renderer.config.ts",
    "build": "npm run build:main && npm run build:renderer",
    "dev:main": "tsc -p tsconfig.node.json --watch",
    "dev:renderer": "vite --config configs/vite.renderer.config.ts",
    "prepublishOnly": "npm run build"
  },
  "main": "dist/main/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/main/index.js",
      "require": "./dist/main/index.js"
    },
    "./renderer": {
      "import": "./dist/renderer/index.js",
      "require": "./dist/renderer/index.js"
    }
  },
  "files": [
    "dist/main",
    "dist/renderer",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^22.13.10",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^4.5.3"
  }
}
