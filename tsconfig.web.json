{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "outDir": "dist/renderer",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "types": [
      "vite/client"
    ],
    "lib": [
      "DOM",
      "ESNext"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/renderer/**/*",
    "src/types/**/*",
    "src/utils/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}